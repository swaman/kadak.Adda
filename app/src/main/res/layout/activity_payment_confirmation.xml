<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">
    <include
        android:id="@+id/toolbar_Empcart"
        layout="@layout/bar_payment_confirmation"
        tools:ignore="InvalidId"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_below="@id/toolbar_Empcart">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/confirmed_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Your Order has been Confirmed"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center_horizontal" />


            <ImageView
                android:id="@+id/tick"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/confirmed_txt"
                android:layout_centerHorizontal="true"
                android:src="@drawable/checked"
                />


            <TextView
                android:id="@+id/thanking_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank you for ordering from Kadak Adda"
                android:textSize="20sp"
                android:layout_marginHorizontal="50dp"
                android:gravity="center"
                android:layout_below="@id/tick"
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/no_of_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 items will be deliverd at"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/thanking_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/house_no"
                android:layout_below="@id/no_of_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H No 340 Sector 13"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/city_locality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vasundhara, Gaziabad"
                android:textSize="18sp"
                android:layout_below="@id/house_no"
                android:layout_centerHorizontal="true"/>


            <Button
                android:id="@+id/review_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/city_locality"
                android:background="@drawable/button_black_"
                android:text="Review Order"
                android:textColor="#F0ED40"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:elevation="5dp"
                android:layout_marginHorizontal="50dp"
                android:shadowColor="#000000"
                android:layout_marginTop="60dp"/>

            <Button
                android:id="@+id/back_to_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/review_order"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/button_black_"
                android:elevation="5dp"
                android:shadowColor="#000000"
                android:text="Back to Home"
                android:textAllCaps="false"
                android:textColor="#F0ED40"
                android:textSize="25sp" />


        </RelativeLayout>



    </ScrollView>
</RelativeLayout>